<div class="container mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin mt-3"} do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email,"Email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Mot de passe" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Se souvenir de moi" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Se connecter", class:'btn btn-lg btn-outline-warning btn-block' %>
        </div>
      <% end %>

      <div>
        <%= link_to "Mot de passe oubliÃ©", new_user_password_path, class:'btn  btn-outline-danger btn-block mt-2'  %>
      </div>
      <%= link_to "Retour", root_path %>
      
    </div>
  </div>
</div>