<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%=form_for @event do |f|%>
        <h1 class="h3 mb-2 font-weight-normal text-center">Modifier ton évènement</h1>

        <div class='container'>
          <%if flash[:messages]%>
            <div class="alert alert-danger" role="alert">
              <%flash[:messages].each do |message|%>
                <p><%=message%></p>
              <%end%>
            </div> 
          <%end%>
          <%if flash[:notice]%>
            <div class="alert alert-success" role="alert">
              <p><%=flash[:notice]%></p>
            </div> 
          <%end%>
          <%if flash[:danger]%>
            <div class="alert alert-danger" role="alert">
              <p><%=flash[:danger]%></p>
            </div> 
          <%end%>
        </div>

        <div class='form-group'>
          <label>Titre</label><br>
          <%= f.text_field :title, class: 'form-control'%>
        </div>

        <div class='form-group'>
          <label>Description</label><br>
          <%= f.text_area :description, class:'form-control'%>
        </div>

        <div class='form-group'>
          <label>Durée</label><br>
          <%= f.number_field :duration, class:'form-control'%>
        </div>

        <div class='form-group'>
          <label>Prix</label><br>
          <%= f.number_field :price, class:'form-control'%>
        </div>

        <div class='form-group'>
          <label>Lieu</label><br>
          <%= f.text_field :location, class:'form-control'%>
        </div>  

        <div class='form-group'>
          <label>Date et heure de départ</label><br>
          <%= f.datetime_local_field :start_date, class:'form-control'%>
        </div>  

        <br>

        <div class='form-group'>

          <button type=submit class='btn btn-outline-warning'>Modifier l'évènement</button>

        </div>
      <% end %>
      <%=form_tag event_avatars_path(@event),class: "form-signin mt-3",multipart: true, method: "post" do %>
      <div class='form-group'>
        <%= file_field_tag :avatar, class:'form-control' %>
      </div>
      <div class='form-group mt-2'>
        <button type=submit class='btn btn-outline-warning'>Ajouter une image</button>
      </div>
      <%end%>
      <%= link_to "Retour", root_path %>
    </div>
  </div>
</div>