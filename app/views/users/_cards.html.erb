 <h2>Les évèments crées :</h2>
<div class='containerfluid d-flex flex-wrap justify-content-around mt-3'>
 
  <%@user.events.each do |event|%>
  <div class="card m-3" style="max-width: 20rem">
    <h3 class="card-header bg-warning">J<%=event.title%></h3>
    <div class="card-body">
      <h6 class="card-subtitle text-muted"><%=event.admin.email%></h6>
    </div>
    <%if event.avatar.attached?%>
    <%= image_tag event.avatar, alt: 'avatar', height:'200px'%>
    <%else%>
    <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
    <rect width="100%" height="100%" fill="#868e96"></rect>
    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
    </svg>
    <%end%>  
    <div class="card-body">
      <p class="card-text"><%=event.description%></p>
    </div>
    <div class="card-body">
      <a href="<%=event_path(event.id)%>" class="btn btn-sm btn-outline-warning">Détails</a>
    </div>
    <div class="card-footer text-muted">
      <%=event.start_date.to_date%>
    </div>
  </div>
  <%end%>
</div>